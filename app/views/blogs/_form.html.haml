= form_for(@blog) do |f|
  - if @blog.errors.any?
    #error_explanation
      %h2
        = pluralize(@blog.errors.count, "error")
        prohibited this blog from being saved:
      %ul
        - @blog.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :author
    %br/
    = f.text_field :author
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .actions
    = f.submit
